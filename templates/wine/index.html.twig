{% extends 'base.html.twig' %}

{% block title %}Hello WineController!{% endblock %}

{% block body %}
    <div class="body-form pt-5">
        <div class="form-wine ">
            <div class="d-flex justify-content-center text-center ">
                {{ form_start(formNew, {'action': path('wine'), 'method': 'POST'}) }}
