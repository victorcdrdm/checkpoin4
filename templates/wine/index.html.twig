                </div>
                <div>
                    <div class="d-flex flex-column">
                        <p>Ajoute un comentaire pour te souvenir de ce vin</p>
                        {{ form_row(formNew.comment , {'label':false}) }}
                    <div class="d-flex flex-column">
                </div>
                <div class="offset-4 col-4 justify-content-center mb-3">
                    <p>SÃ©lectionne les cepage de ce vin</p>
                    {{ form_row(formNew.grapes) }}
                </div>
                {{ form_row(formNew.vignoble) }}
                {{ form_row(formNew.picture) }}
                 <div class="d-none">
                {{ form_row(formNew.region) }}
                 </div>
                    </div>
                <input type='submit' value='Add category'>
                {{ form_end(formNew) }}
        </div>
    </div>
{% endblock %}
