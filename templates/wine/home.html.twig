{% extends 'base.html.twig' %}

{% block body %}
    <div class="banner">

        <h1>N'oubliez plus jamais les vins que vous avez aimés</h1>
    </div>

    <div class="d-flex justify-content-center mt-5 mb-4">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Ajoutez votre vin
        </button>
    </div>
    <!-- Modal -->
    <div class="modal fade mt-5" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4 class="d-flex justify-content-center mb-4">Choisis une région</h4>
                    {{ form_start(form) }}
                    <div class="d-flex justify-content-center ">
                    {{ form_row(form.name) }}
                    </div>
                    <div class="d-flex justify-content-center pt-5">
                    <input type='submit'  value='pochaine étape'>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="container d-flex justify-content-center mb-4">
            <div class="row">
                {% for wine in wines %}
                    <div class="card col-md-3 col-sm-1 " style="width: 15rem" >
                        <img class="card-img-top mt-5" src="{{ wine.picture }}" alt="Card image cap">
                        <div class="card-body align-baseline mt-5">
                            <h3>{{ wine.name }}</h3>
                            <h6>{{ wine.year }}</h6>
                            <h6>{{ wine.region }} </h6>
                            <h6>{{ wine.vignoble }}</h6>
                            <div>
                                {% for grape in wine.grapes  %}
                                     {{ grape }}
                                {% endfor %}
                            </div>
                            <p>note: {{ wine.comment }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </ul>
    </div>

{% endblock %}
