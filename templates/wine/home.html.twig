{% extends 'base.html.twig' %}

{% block body %}
    <h1>hello world !</h1>
    <div class="d-flex justify-content-center mb-4">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Ajoute un vin
        </button>
    </div>
    <!-- Modal -->
    <div class="modal fade mt-5" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4 class="d-flex justify-content-center mb-4">Choisi une r√©gion</h4>
                    {{ form_start(form) }}
                    <div class="d-flex justify-content-center mb-4">
                    {{ form_row(form.name) }}
                    </div>
                    <div class="d-flex justify-content-center">
                    <input type='submit'  value='pochaine etape'>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="container d-flex justify-content-center mb-4 ">
        <div class="row ">
        {% for wine in wines %}
            <div class="card col-md-3" style="width: 16rem;">
                <img class="card-img-top" src="{{ wine.picture }}" alt="Card image cap">
                <div class="card-body">
                    <h3>{{ wine.name }}</h3>
                    <h6>{{ wine.year }}</h6>
                    <h6>{{ wine.region }} {{ wine.vignoble }}</h6>
                    <div class="row pl-3">
                        {% for grape in wine.grapes  %}
                            {{ grape }}
                        {% endfor %}
                    </div>
                    <p class="card-text">{{ wine.comment }}</p>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
